<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="202509080000-01" author="Nicolas Sagon">

        <addColumn tableName="blurry_file_analysis">
            <column name="data_document_id" type="BIGINT"/>
        </addColumn>

        <sql>
            UPDATE blurry_file_analysis b
            SET data_document_id = f.document_id
            FROM file f
            WHERE f.id = b.data_file_id;
        </sql>

    </changeSet>

</databaseChangeLog>