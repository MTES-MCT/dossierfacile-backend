            <column name="document_category_step" value="SOCIAL_SERVICE_OTHER" />
            <where>document_category='FINANCIAL' AND document_sub_category='SOCIAL_SERVICE' AND document_category_step IS NULL</where>
        </update>
        <update tableName="document">
            <column name="document_category_step" value="RENT_OTHER" />
            <where>document_category='FINANCIAL' AND document_sub_category='RENT' AND document_category_step IS NULL</where>
        </update>
        <update tableName="document">
            <column name="document_category_step" value="PENSION_UNKNOWN" />
            <where>document_category='FINANCIAL' AND document_sub_category='PENSION' AND document_category_step IS NULL</where>
        </update>
    </changeSet>
</databaseChangeLog>
